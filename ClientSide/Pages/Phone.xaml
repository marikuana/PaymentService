<Page x:Class="ClientSide.Pages.Phone"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ClientSide.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Phone">

    <StackPanel Background="Transparent">
        <TextBlock Text="Номер телефну:" FontSize="20" Margin="20,50,0,0" FontWeight="Bold"/>
        <Grid>
            <TextBox Text="0676767676" VerticalContentAlignment="Center" MaxLength="15" FontSize="35" x:Name="PhoneNumber" Margin="20,10,0,10" Background="Transparent" BorderBrush="Orange" Width="225" HorizontalAlignment="Left"/>
        </Grid>
        <TextBlock Text="Сумма:" FontSize="20" Margin="20,0,-10,0" FontWeight="Bold"/>
        <StackPanel Orientation="Horizontal">
        <TextBox Text="100" VerticalContentAlignment="Center" FontSize="35" x:Name="Money" Grid.Column="1" Margin="20" Background="Transparent" BorderBrush="Orange" Width="110"/>
            <TextBlock Text="грн." FontSize="25" VerticalAlignment="Center"/>
        </StackPanel>
        <Button Grid.Column="1" Content="Поповнити" Margin="40" Background="Orange" MaxHeight="70" FontSize="30" Foreground="White" Click="Button_Click"/>
    </StackPanel>
</Page>
